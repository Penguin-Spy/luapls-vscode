{
  "name": "luapls",
  "version": "0.0.1",
  "publisher": "penguin-spy",
  "engines": { "vscode": "^1.94.0" },
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "luapls.hello",
        "title": "say hi"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "luapls.hello",
          "group": "z_commands",
          "when": "resourceLangId == lua"
        }
      ]
    },
    "configuration": {
			"type": "object",
			"title": "luapls",
			"properties": {
				"luapls.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
  },
  "activationEvents": [
    "onLanguage:lua"
  ],
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0"
  },
  "license": "MPL-2.0",
  "repository": { "url": "https://github.com/Penguin-Spy/luapls-vscode/"},
  "displayName": "luapls"
}